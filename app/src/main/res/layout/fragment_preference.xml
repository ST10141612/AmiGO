<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mtm.example.amigo.PreferenceFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lblPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferences_heading"
        android:textSize="35sp"
        style="@style/TextColor"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/lblMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode:"
        android:textSize="35sp"
        style="@style/TextColor"
        android:layout_marginVertical="150dp"
        android:layout_marginHorizontal="20dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchMode"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="155dp"
        android:layout_marginHorizontal="200dp"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="263dp"
        android:layout_height="58dp"
        style="@style/TextColor"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="499dp"
        android:text="Back" />


</FrameLayout>